---
import ChevronRightIcon from "@lucide/astro/icons/chevron-right";
import Link from "./Link.astro";

interface Props {
  pages: { name: string; path: string }[];
}

const { pages } = Astro.props;
---

<nav aria-label="Breadcrumbs" class="py-2">
  <ol class="inline-flex items-center">
    {
      pages.map((page, i) => (
        <li class="inline-flex items-center" {...(i === pages.length - 1 ? { "aria-current": "page" } : {})}>
          {i !== 0 && <ChevronRightIcon class="size-5 text-gray-400" />}
          <Link href={page.path} class="font-semibold text-accent-primary hover:text-accent-secondary">
            {page.name}
          </Link>
        </li>
      ))
    }
  </ol>
</nav>
