---
import type { MarkdownHeading } from "../../util/generatePages";
import AsideItem from "./AsideItem.astro";

interface Props {
  /** Sub-headings */
  headings: MarkdownHeading[];
  /** Whether this heading list is the first level (and so should not be indented) */
  isFirst?: boolean;
}
const { headings, isFirst = false } = Astro.props;
---

<ul class:list={[!isFirst && "ps-2", "space-y-1"]}>
  {headings.map((heading) => <AsideItem {heading} />)}
</ul>
